# Environment Variables Template for Mentto Backend
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard: https://supabase.com/dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-public-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these from your Firebase project console: https://console.firebase.google.com

# Firebase Project ID (found in Project Settings > General)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase Web API Key (found in Project Settings > General)
FIREBASE_API_KEY=your-firebase-web-api-key

# Firebase Auth Domain (usually: your-project-id.firebaseapp.com)
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Admin SDK Service Account (download from Project Settings > Service Accounts)
# Option 1: Use individual environment variables
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# Option 2: Use service account JSON file (place in project root as credentials.json)
# If using this option, leave the above Firebase variables empty

# =============================================================================
# GOOGLE OAUTH CONFIGURATION (Optional)
# =============================================================================
# Get these from Google Cloud Console: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8001/calendar/callback

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate a secure secret key (you can use: openssl rand -hex 32)
JWT_SECRET_KEY=your-super-secret-jwt-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000

# App name
APP_NAME=Mentto Backend

# Debug mode (set to false in production)
DEBUG=true

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Public bucket name for profile pictures (must exist in Supabase Storage)
STORAGE_BUCKET_NAME=profile_picture
# Max file size in bytes (default 50MB if not set)
# Example: 52428800 for 50MB
MAX_FILE_SIZE=52428800
# Allowed MIME types (comma-separated). Leave unset to use code defaults.
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# =============================================================================
# RAZORPAY CONFIGURATION
# =============================================================================
# Get these from Razorpay Dashboard (use test mode for development)
RAZOR_PAY_KEY_ID=rzp_test_your_key_id
RAZOR_PAY_KEY_SECERET=your_key_secret  # note: spelling matches code
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# EMAIL CONFIGURATION (for Email MFA)
# =============================================================================
# SMTP server configuration for sending OTP emails
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=your-email@gmail.com

# =============================================================================
# REDIS CONFIGURATION (Optional - for session management)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# WATI (WhatsApp) CONFIGURATION (Optional)
# =============================================================================
# Example: https://app-server.wati.io (do not include trailing slash)
WATI_BASE_URL=https://your-wati-base-url
WATI_API_KEY=your-wati-api-key
ENABLE_WATI_NOTIFICATIONS=false
